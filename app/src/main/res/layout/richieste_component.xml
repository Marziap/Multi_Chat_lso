<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/customContainer"
        android:background="@drawable/button_corner_radius_blue"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginHorizontal="20dp"
    android:layout_marginBottom="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nomeEstanza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Marzia La fam"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:paddingLeft="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAccept"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_accept_blue"
            android:textSize="30sp"
            android:text="✓" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRefuse"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="15dp"
            android:textSize="30sp"
            android:background="@drawable/button_refuse_purple"
            android:text="✕" />
    </LinearLayout>

