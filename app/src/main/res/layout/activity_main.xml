<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="889dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="148dp"
            android:layout_marginBottom="78dp"
            android:text="Best Chat ;)"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/txtinptUsername"
            android:layout_width="311dp"
            android:layout_height="74dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/button_corner_radius_blue"
            android:ems="10"
            android:textColor="@color/black"
            android:hint="Username"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColorHint="@color/black"
            android:textSize="30sp" />


        <EditText
            android:id="@+id/txtinptPassword"
            android:layout_width="311dp"
            android:layout_height="74dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_corner_radius_blue"
            android:ems="10"
            android:textColor="@color/black"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColorHint="@color/black"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAccedi"
            android:layout_width="222dp"
            android:layout_height="74dp"
            android:layout_marginHorizontal="95dp"
            android:layout_marginTop="59dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/button_corner_radius_purple"
            android:text="Accedi"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegistrati"
            android:layout_width="222dp"
            android:layout_height="74dp"
            android:layout_marginHorizontal="95dp"
            android:background="@drawable/button_corner_radius_purple"
            android:text="Registrati"
            android:textSize="30sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>